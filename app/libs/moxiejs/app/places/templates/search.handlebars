<div class="search-input">
    <input type="text" placeholder="Search&hellip;" name="q" value="{{query.q}}">
</div>
<div class="map-options {{#if filtering}}something-highlighted{{/if}}">
    <span>{{#unless sortAZ}}<a class="sort-az" href="#">A-Z</a>{{else}}A-Z{{/unless}}</span><span>{{#unless sortNearby}}<a class="sort-nearby" href="#">Nearby</a>{{else}}Nearby{{/unless}}</span><span class="filter {{#if filtering}}highlighted{{/if}}"><a href="#">Filters</a></span>
</div>
<div class="messages">
</div>
<div class="filters {{#unless filtering}}hide-filters{{/unless}}">
    {{#if facets.type_exact}}
    <div class="facets type-exact">
        <ul>
            {{#facets.type_exact}}
            <li><label><input {{#if checked}}checked="checked"{{/if}} type="checkbox" name="{{ value }}">{{ title }}</label></li>
            {{/facets.type_exact}}
        </ul>
    </div>
    {{/if}}
    {{#if facets.accessibility}}
    <div class="facets accessibility">
        <h3>Accessibility</h3>
        <ul>
            {{#facets.accessibility}}
            <li><label><input {{#if checked}}checked="checked"{{/if}} type="checkbox" name="{{ name }}" value="{{ value }}">{{ title }}</label></li>
            {{/facets.accessibility}}
        </ul>
    </div>
    {{/if}}
</div>
<ul class="results-list">
</ul>
{{#if midRequest}}
<img src="images/preloader.gif" class="preloader">
{{else}}
{{#unless hasResults}}
<p>Your search - <strong>{{ query.q }}</strong> - did not match any places of interest.</p>
{{/unless}}
{{/if}}
