{{#if name }}
    <h3>
        {{#if trackingUserPosition}}
            <span class="distance">{{humaniseDistance distance }}</span>
        {{/if}}
        <a href="{{ reverse 'detail' 'id' id }}">
            {{ name }}
        </a>
    </h3>
    {{#if userSearch}}
    <p class="type">
        {{ type_name }}
    </p>
    {{/if}}
    {{# if opening_hours }}
        {{{currentlyOpen opening_hours}}}
    {{/if}}
{{ else }}
    <p class="type">
        {{#if trackingUserPosition}}
            <span class="distance">{{humaniseDistance distance }}</span>
        {{/if}}
        <a href="{{ reverse 'detail' 'id' id }}">
        {{ type_name }}
        </a>
    </p>
    {{! opening_hours should be a string if it exists}}
    {{# if opening_hours }}
        <p class="type">{{{currentlyOpen opening_hours}}}</p>
    {{/if}}
{{/if}}
{{# if collection_times }}
    <p class="metadata">{{{collectionTimes collection_times}}}</p>
{{/if}}
{{#if userSearch}}
    {{#if address }}
        <p class="metadata">{{ address }}</p>
    {{/if}}
{{/if}}
