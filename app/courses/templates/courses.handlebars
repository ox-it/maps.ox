{{#if query}}
    <h2 class="free-heading">{{ query }}</h2>
{{/if}}


{{#if courses}}
    <ul class="results-list">
    {{#courses}}
        <li>
            <a href='#/courses/detail/{{ id }}'>
                {{ title }}
                <span class="subtext">{{ provider }}</span>
            </a>
        </li>
    {{/courses}}
    </ul>
{{else}}
    {{#if ongoingFetch}}
    <div id="loading">
        <img src="images/preloader.gif" class="preloader">
    </div>
    {{else}}
    <p>Sorry, no results for your query.</p>
    {{/if}}
{{/if}}
